<div class="flex flex-col gap-2">
  <div class='flex items-center justify-between gap-2'>
    <h2 class="typography-body-s-lh150 text-dark-gray-palette-p1 truncate"><%= contact.full_name %></h2>
    <%= link_to account_pipelines_path(Current.account), class: 'btn-secondary !px-2', data: { tooltip_target: "tooltip-kanban-link" } do %>
      <i data-lucide="kanban"></i>
    <% end %>
    <div id="tooltip-kanban-link" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-700 rounded-lg shadow-xs opacity-0 tooltip dark:bg-gray-700">
      <%= t('views.accounts.contacts.chatwoot_embeded.show.kanban_view') %>
      <div class="tooltip-arrow" data-popper-arrow></div>
    </div>
  </div>
  <h1 class="typography-title-b-lh150 text-dark-gray-palette-p1"><%= contact.account.name %></h1>
  <div class="flex flex-wrap gap-2 sm:gap-4">
    <div class="flex">
      <% if contact.email.present? %>
        <div class="p-2 bg-light-palette-p5 border-2 rounded-l-md border-light-palette-p3">
          <i data-lucide="mail" class="w-4 h-4 m-0.5 stroke-brand-palette-03"></i>
        </div>
        <%= mail_to contact.email, class: "-ml-0.5 py-2 pl-3 pr-4 bg-light-palette-p5 border-2 rounded-r-md border-light-palette-p3 typography-sub-text-m-lh150 text-dark-gray-palette-p3 hover:bg-brand-palette-07 hover:text-brand-palette-03" do %>
          <%= contact.email %>
        <% end %>
      </div>
    <% end %>
    <div class="flex">
      <% if contact.phone.present? %>
        <div class="p-2 bg-light-palette-p5 border-2 rounded-l-md border-light-palette-p3">
          <i data-lucide="phone" class="w-4 h-4 m-0.5 stroke-brand-palette-03"></i>
        </div>
        <%= link_to contact.phone, "tel:#{contact.phone}", class:"-ml-0.5 py-2 pl-3 pr-4 bg-light-palette-p5 border-2 rounded-r-md border-light-palette-p3 typography-sub-text-m-lh150 text-dark-gray-palette-p3 hover:bg-brand-palette-07 hover:text-brand-palette-03" %>
      <% end %>
    </div>
  </div>
</div>
